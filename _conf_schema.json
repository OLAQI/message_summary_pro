{
  "message_count": {
    "description": "触发总结的消息条数",
    "type": "int",
    "default": 50
  },
  "summary_time": {
    "description": "总结信息发送时间",
    "type": "string",
    "options": ["立即", "每天固定时间"],
    "default": "立即"
  },
  "fixed_send_time": {
    "description": "如果选择每天固定时间发送，指定具体时间 (格式: HH:MM)",
    "type": "string",
    "default": "23:59"
  },
  "trigger_command": {
    "description": "监听的命令词，用于手动触发总结",
    "type": "string",
    "default": "/summary"
  },
  "summary_mode": {
    "description": "选择总结的风格",
    "type": "string",
    "options": ["简洁", "严谨", "幽默"],
    "default": "简洁"
  },
  "weather_location": {
    "description": "用于获取天气信息的地点",
    "type": "string",
    "default": "北京"
  },
  "amap_api_key": {
    "description": "高德天气 API Key",
    "type": "string",
    "hint": "请在高德开放平台申请 Web 服务 API 类型的 Key",
    "obvious_hint": true,
    "default": ""
  }
}
