{
    "message_count": {
        "description": "触发总结的消息条数",
        "type": "int",
        "hint": "达到此条数触发总结（最低5条）",
        "default": 50,
        "min": 5,
        "max": 200
    },
     "summary_mode": {
        "description": "总结风格",
        "type": "string",
        "options": ["简洁", "严谨", "幽默"],
        "default": "简洁",
        "hint": "选择总结的风格"
    },
    "summary_time": {
        "description": "总结信息发送时间",
        "type": "string",
        "options": ["immediate", "daily"],
        "default": "immediate",
        "hint": "immediate: 立即发送, daily: 每天固定时间"
    },
    "fixed_send_time": {
        "description": "每日固定发送时间",
        "type": "string",
        "default": "23:59",
        "hint": "格式: HH:MM (仅在 daily 模式下有效)"
    },
    "trigger_command": {
        "description": "触发总结的命令词",
        "type": "string",
        "default": "/summary",
        "hint": "用户发送此命令触发总结"
    },
    "weather_location": {
        "description": "天气地点",
        "type": "string",
        "default": "北京",
        "hint": "用于获取天气信息的地点"
    }
}
